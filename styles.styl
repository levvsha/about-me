.tooltip {
  background: #1496bb
  color: #fff
  pointer-events: none
  position: absolute
  top: 200px
  left: 200px
  box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28)
  font-family: Arial
  padding: 4px 7px
  border-radius: 4px
  display: none
  margin-top: -40px
  transform: translate(-50%)
  transition: all 0.4s
}

.tooltip:after {
  border-left: solid transparent 10px
  border-right: solid transparent 10px
  border-top: solid #1496bb 10px
  bottom: -10px
  margin-left: -10px
  content: ""
  height: 0
  left: 50%
  position: absolute
  width: 0
}
